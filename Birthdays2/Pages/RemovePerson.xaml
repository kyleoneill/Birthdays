<Page x:Class="Birthdays2.RemovePerson"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Birthdays2"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1280"
      Title="RemovePerson">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../birthday.jpg"/>
        </Grid.Background>
        <TextBox x:Name="RemoveTextbox" HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" VerticalAlignment="Top" Width="298" Margin="785,440,0,0" FontSize="18"/>
        <Label Content="Name of Person to Remove" HorizontalAlignment="Left" Margin="805,398,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button Content="Enter" HorizontalAlignment="Left" Margin="1125,440,0,0" VerticalAlignment="Top" Width="99" Height="30" FontSize="20" Click="Button_Click"/>
    </Grid>
</Page>
