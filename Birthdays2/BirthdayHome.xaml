<Page x:Class="Birthdays2.BirthdayHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Birthdays2"
      mc:Ignorable="d"
      Title="BirthdayHome" Height="800" Width="1280">

    <Grid Margin="0,10">
        <Grid.Background>
            <ImageBrush ImageSource="birthday.jpg"/>
        </Grid.Background>

        <Button Margin="0,185,10,90" Width="125"
        Height="25" HorizontalAlignment="Right" Click="button1_click">View Birthdays</Button>

        <Button Margin="0,225,10,50" Width="125"
        Height="25" HorizontalAlignment="Right" Click="button2_click">Add Person</Button>

        <Button Margin="0,265,10,10" Width="125"
        Height="25" HorizontalAlignment="Right" Click="button3_click">Remove Person</Button>
    </Grid>
</Page>
